{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es5",
        "allowJs": true,
        "checkJs": false,
        "jsx": "react",
        "outDir": "./dist",
        "rootDir": "./src",
        "removeComments": true,
        "noEmit": false,
        "pretty": true,
        "skipLibCheck": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "include": [
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}